@model dotnetapp.Models.Appointment

<h2>Delete Confirmation</h2>

<p>Are you sure you want to delete this appointment?</p>

<dl class="row">
    <dt class="col-sm-2">Patient Name:</dt>
    <dd class="col-sm-10">@Model.PatientFirstName @Model.PatientLastName</dd>

    <dt class="col-sm-2">Doctor Name:</dt>
    <dd class="col-sm-10">@Model.DoctorFirstName @Model.DoctorLastName</dd>

    <dt class="col-sm-2">Specialty:</dt>
    <dd class="col-sm-10">@Model.DoctorSpecialty</dd>

    <dt class="col-sm-2">Appointment Date:</dt>
    <dd class="col-sm-10">@Model.AppointmentDate.ToString("yyyy-MM-dd HH:mm")</dd>

    <dt class="col-sm-2">Reason:</dt>
    <dd class="col-sm-10">@Model.Reason</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="AppointmentID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

