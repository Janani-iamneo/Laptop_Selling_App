@model List<Ride>

<h2>Available Rides</h2>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                @* <th>Ride ID</th> *@
                <th>Departure Location</th>
                <th>Destination</th>
                <th>Date Of Departure</th>
                <th>Maximum Capacity</th>
                <th>Joined Commuters</th>
                <th>Available Seats</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ride in Model)
            {
                int joinedCommuters = ride.Commuters.Count;
                int availableSeats = ride.MaximumCapacity - joinedCommuters;

                <tr>
                    @* <td>@ride.RideID</td> *@
                    <td>@ride.DepartureLocation</td>
                    <td>@ride.Destination</td>
                    <td>@ride.DateOfDeparture</td>
                    <td>@ride.MaximumCapacity</td>
                    <td>@joinedCommuters</td>
                    <td>@availableSeats</td>
                    <td>

                        @if (availableSeats > 0)
                        {
                            <a id="join" href="@Url.Action("JoinRide", "Slot", new { rideId = ride.RideID })" class="btn btn-primary">Join Ride</a>
                        }
                        else
                        {
                            <span class="text-muted">No seats available</span>
                        }
                        <a id="delete" asp-asp-controller="Ride" asp-action="DeleteConfirm" asp-route-id="@ride.RideID" class="btn btn-danger">Delete</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No rides available.</p>
}
