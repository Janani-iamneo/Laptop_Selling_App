@model List<Train>

<h2>Available Trains</h2>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Departure Location</th>
                <th>Destination</th>
                <th>Date Of Departure</th>
                <th>Maximum Capacity</th>
                <th>Joined Commuters</th>
                <th>Available Seats</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var train in Model)
            {
                int joinedPassengers = train.Commuters.Count;
                int availableSeats = train.MaximumCapacity - joinedPassengers;

                <tr>
                    <td>@train.DepartureLocation</td>
                    <td>@train.Destination</td>
                    <td>@train.DateOfDeparture</td>
                    <td>@train.MaximumCapacity</td>
                    <td>@joinedPassengers</td>
                    <td>@availableSeats</td>
                    <td>

                        @if (availableSeats > 0)
                        {
                            <a id="join" href="@Url.Action("JoinRide", "Slot", new { rideId = train.RideID })" class="btn btn-primary">Join Ride</a>
                        }
                        else
                        {
                            <span class="text-muted">No seats available</span>
                        }
                        <a id="delete" asp-asp-controller="Ride" asp-action="DeleteConfirm" asp-route-id="@train.RideID" class="btn btn-danger">Delete</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No rides available.</p>
}
