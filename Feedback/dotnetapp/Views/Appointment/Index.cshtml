@model List<Appointment>

<h2>Appointment List</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Patient Name</th>
            <th>Doctor Name</th>
            <th>Appointment Date</th>
            <th>Reason</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.AppointmentID</td>
                <td>@($"{appointment.PatientFirstName} {appointment.PatientLastName}")</td>
                <td>@($"{appointment.DoctorFirstName} {appointment.DoctorLastName}")</td>
                <td>@appointment.AppointmentDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@appointment.Reason</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@appointment.AppointmentID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@appointment.AppointmentID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
